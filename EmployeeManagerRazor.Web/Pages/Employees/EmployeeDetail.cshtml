@page "{id}"
@model EmployeeManagerRazor.Web.Pages.EmployeeDetailModel
@{
    ViewData["Title"] = "Employee Detail";
    var imagePath = $"~/images/{Model.Employee.PhotoPath ?? "noimage.jpg"}";
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <vc:head-count dept="@Model.Employee.Department"></vc:head-count>
    </div>
</div>

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">
            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Employee Id: @Model.Employee.Id</h4><hr />
                        <h4 class="cardTextLeftFloating">Email: @Model.Employee.Email</h4><hr />
                        <h4 class="cardTextLeftFloating">Department: <span class="text-danger font-weight-bold">@Model.Employee.Department</span></h4><hr />
                    </div>
                    <div cite="col col-lg-2">
                        <div style="border-right: 1px solid rgba(0,0,0,.1);">
                            <img class="card-img-top imageThumbnail border border-primary" style="background-color:#dle7ff;" src="@imagePath" asp-append-version="true"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card-footer text-center" style="background-color: rgba(0,0,0,0.25)">
                            <a asp-area="" asp-page="/Employees/Employees" class="btn btn-success buttonShadow">Back</a>
                            <a asp-page="/Emoloyees/EmoloyeeEdit" asp-route-id="@Model.Employee.Id" class="btn btn-primary buttonShadow">Edit</a>
                            <a asp-page="/Employees/EmployeeDelete" asp-route-id="@Model.Employee.Id" class="btn btn-danger buttonShadow">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>